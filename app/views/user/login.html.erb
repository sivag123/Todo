
<div class="jumbotron" id="login_form">
	<h2>Login here...!</h2>
	<%= form_for @user,url: "/login" do |f| %>
		<div class="form-group">
			<label>Username</label>
			<%= f.text_field :email ,class: "form-control", placeholder: "username goes here..."%>
		</div>
		<div class="form-group">
			<label>Password</label>
			<%= f.password_field :password ,class: "form-control", placeholder: "password..."%>
		</div>
		<%= f.submit "Login" , class: "btn btn-success"%>
	<%end%>
</div>
<div id="banner">
	<h1>Todo Manager..<br/><small>The personal manager u can trust!</small></h1>
</div>
<div class="jumbotron" id="signup_form">
	<h2>Signup here...!</h2>
	<%= form_for (@user) do |f| %>
		
		<div class="form-group">
			<label>Username</label>
			<%= f.text_field :username, class: "form-control" , placeholder: "Username goes here..." %>
		</div>

		<div class="form-group">
			<label>Email ID</label>
			<%= f.text_field :email, class: "form-control" , placeholder: "A valid mail id" %>
		</div>
		<div class="form-group">
			<label>Password</label>
			<%= f.password_field :password, class: "form-control" , placeholder: "Password" %>
		</div>
		<div class="form-group">
			<label>Re-type Password</label>
			<%= f.password_field :password_confirmation, class: "form-control" , placeholder: "Retype password" %>
		</div>
		<%= f.submit "Signup!" ,class: "btn btn-success" %>
		&nbsp; Already a user? <a href="/login"> Login here... </a>
	<%end%>
</div>